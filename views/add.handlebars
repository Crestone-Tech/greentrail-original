{{! BOOSTRAP CSS }}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


<h1 class="page-title grotesque" id="location-title">What would you like to add?</h1>

<section class="borders container" id="featured">
  <div class="container">
    <div class="row">
      <div class="col">
        <div id="featured-text">
          <h2 class="grotesque page-subtitle" id="featured-title">A Place to Stay</h2>
        </div>
        <div id="featured-content">
          <div id="featured-img-div">
            <img
              src='/images/hotel-pura-chacala.jpg'
              class="borders"
              id="featured-img"
              alt="Facade of a hotel"
            />
          </div>
        </div>
      </div>
      {{!-- add Provider-Stay --}}
      {{!-- {{> addProvider/modalAddStay}} --}}
      <div class="col">
        <div id="featured-text">
          <h2 class="grotesque page-subtitle" id="featured-title">A Place to Eat</h2>
        </div>
        <div id="featured-content">
          <div id="featured-img-div">
            <img
              src="/images/tacos.jpg"
              class="borders"
              id="featured-img"
              alt="Tacos on a wooden board"
            />
          </div>
        </div>
      </div>
      {{!-- add Provider-Eat --}}
      {{!-- {{> addProvider/modalAddEat}} --}}
    </div>
    <div class="row">
      <div class="col">
        <div id="featured-text">
          <h2 class="grotesque page-subtitle" id="featured-title">Something to Do</h2>
        </div>
        <div id="featured-content">
          <div id="featured-img-div">
            <a data-bs-toggle="modal" data-bs-target="#addExploreModal">
              <img
                src="/images/birdwatching.jpg"
                class="borders"
                alt="Person with binoculars watching a flock of birds flying at sunset"
              />
            </a>
          </div>
        </div>
      </div>
      {{!-- add Provider-Explore --}}
      {{> addProvider/modalAddExplore}}
      <div class="col">
        <div>
          <h2 class="grotesque page-subtitle">A Service to Provide</h2>
        </div>
        <div id="featured-content">
          <div id="featured-img-div">
          <a data-bs-toggle="modal" data-bs-target="#addServiceModal">
            <img
              src='/images/lavanderia.jpg'
              class="borders"
              alt="Person holding folded laundry in a laundromat"
            />
          </a>
        </div>
      </div>
      {{!-- add Provider-Service --}}
      {{> addProvider/modalAddService}}
    </div>
  </div>
</section>

        
