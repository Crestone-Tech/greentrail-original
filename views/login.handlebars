<div class="fade-in" id="login-page">
  <div>
    <button id="sign-in-button">Sign in</button>
    <button id="sign-up-button">Sign up</button>
  </div>

  <div>
    <section class="bordered-elem" id="sign-in">
      <p>Email:</p>
      <input type="text" id="sign-in-email" name="sign-in-email" />
      <p>Password:</p>
      <input type="password" id="sign-in-password" name="sign-in-password" />
      <button id="go-sign-in">Sign in</button>
    </section>

    <section class="bordered-elem" id="sign-up">
      <p>First name:</p>
      <input type="text" id="sign-up-first" name="sign-up-first" />
      <p>Last name:</p>
      <input type="text" id="sign-up-last" name="sign-up-last" />
      <p>Email:</p>
      <input type="text" id="sign-up-email" name="sign-up-email" />
      <p>Password:</p>
      <input type="password" id="sign-up-password" name="sign-up-password" />
      <button id="go-sign-up">Sign Up</button>
    </section>
  </div>
</div>

