<section>
    <h2>Check out these local service providers!</h2>
    {{#each community.providers as |provider|}}
    {{#ifvalue provider.service value='amenities'}}
    <h3>{{provider.provider_name}}</h3>
    <h4>{{provider.description}}</h4>
    <h4>Located On: {{provider.site.street_address}}</h4>
    <a href="{{provider.site.map_link}}">Map link</a>
    {{/ifvalue}}
    {{/each}}
</section>