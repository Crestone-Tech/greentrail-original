 <section>
<h1>Restaurants</h1>
    {{#if restaurants}}
      <ul>
        {{#each restaurants}}
          <li>
            <h2>{{site_name}}</h2>
            <p><strong>{{provider_name}}</strong> </p>
            {{!-- <p><strong>Description:</strong> {{description}}</p> --}}
            <a href="{{map_link}}">View on Map</a>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No restaurants found.</p>
    {{/if}}
</section> 
